{
    "app-id": "de.schmidhuberj.DieBahn",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "diebahn",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/diebahn/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "modules": [
        {
            "name": "diebahn",
            "buildsystem": "simple",
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml",
                "cargo --offline build --release",
                "install -D target/release/diebahn /app/bin/diebahn",
                "ls -ld po/locale/*/ | sed 's|.*po/locale/||' | xargs -I % mkdir -p /app/sharelocale/locale/%LC_MESSAGES/",
                "ls -ld po/locale/*/ | sed 's|.*po/locale/||' | xargs -I % cp 'po/locale/%LC_MESSAGES/de.schmidhuberj.DieBahn.mo' /app/sharelocale/locale/%LC_MESSAGES/de.schmidhuberj.DieBahn.mo",
                "ls -ld po/locale/*/ | sed 's|.*po/locale/||' | xargs -I % mkdir -p /app/share/locale/%LC_MESSAGES/",
                "ls -ld po/locale/*/ | sed 's|.*po/locale/||' | xargs -I % ln -s '/app/sharelocale/locale/%LC_MESSAGES/de.schmidhuberj.DieBahn.mo' /app/share/locale/%LC_MESSAGES/de.schmidhuberj.DieBahn.mo",
                "install -D packaging/de.schmidhuberj.DieBahn.metainfo.xml /app/share/metainfo/de.schmidhuberj.DieBahn.metainfo.xml",
                "install -D packaging/de.schmidhuberj.DieBahn.desktop /app/share/applications/de.schmidhuberj.DieBahn.desktop",
                "install -D packaging/de.schmidhuberj.DieBahn.png /app/share/icons/hicolor/512x512/apps/de.schmidhuberj.DieBahn.png"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/Schmiddiii/diebahn/-/archive/v0.1.3/diebahn-v0.1.3.tar.gz",
                    "sha512": "6cb796de369bee06804e804b908273ae9ffcc5fbd9e0440dd8002c87c902a497028dff681f7ff22ba3b92ac5d9d379e1c8cb71c220703f141eebdfe5ea42999b"
		}, 
                {
                    "type": "patch",
                    "path": "internationalization.patch"
		}, 
                "generated-sources.json"
            ],
            "post-install": [
            ]
        }
    ]
}
